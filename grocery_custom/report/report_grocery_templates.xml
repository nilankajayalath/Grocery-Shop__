<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="report_grocery_details">
    <t t-call="web.html_container">
      <t t-call="web.external_layout">
        <div class="page" style="margin: 30px; font-family: 'Arial', sans-serif; background-color: #fdfcfb;">

          <!-- ðŸŒˆ Fancy Header -->
          <h2 style="margin-top: 40px; color: #ffffff; background: linear-gradient(to right, #6a11cb, #2575fc); text-align: center; font-size: 30px; margin-bottom: 30px; border-radius: 10px; padding: 12px; letter-spacing: 1px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
            ðŸ›’ Grocery Item Report
          </h2>

          <t t-foreach="docs" t-as="o">
            <table style="width: 100%; border-collapse: collapse; margin-bottom: 35px; font-size: 15px; border-radius: 8px; overflow: hidden; box-shadow: 0 3px 12px rgba(0, 0, 0, 0.08);">

              <tr>
                <th style="background-color: #ff7675; color: #ffffff; padding: 10px; text-align: left; width: 30%;">Name</th>
                <td style="background-color: #ffeef0; padding: 10px;"><span t-field="o.name"/></td>
              </tr>

              <tr>
                <th style="background-color: #74b9ff; color: #ffffff; padding: 10px; text-align: left;">Category</th>
                <td style="background-color: #eaf4ff; padding: 10px;"><span t-field="o.category"/></td>
              </tr>

              <tr>
                <th style="background-color: #55efc4; color: #2d3436; padding: 10px; text-align: left;">Price</th>
                <td style="background-color: #eafff5; padding: 10px;"><span t-field="o.price"/></td>
              </tr>

              <tr>
                <th style="background-color: #fd79a8; color: #ffffff; padding: 10px; text-align: left;">Discount</th>
                <td style="background-color: #fff0f8; padding: 10px;"><span t-field="o.discount"/></td>
              </tr>

              <tr>
                <th style="background-color: #ffeaa7; color: #2d3436; padding: 10px; text-align: left;">Final Price</th>
                <td style="background-color: #fffdf2; padding: 10px;"><span t-field="o.final_price"/></td>
              </tr>

              <tr>
                <th style="background-color: #a29bfe; color: #ffffff; padding: 10px; text-align: left;">Quantity</th>
                <td style="background-color: #f0efff; padding: 10px;"><span t-field="o.quantity"/></td>
              </tr>

              <tr>
                <th style="background-color: #fdcb6e; color: #2d3436; padding: 10px; text-align: left;">In Stock</th>
                <td style="background-color: #fffaf0; padding: 10px;">
                  <t t-if="o.in_stock">
                    <span style="color: #00b894; font-weight: bold;">âœ” Yes</span>
                  </t>
                  <t t-else="">
                    <span style="color: #d63031; font-weight: bold;">âœ˜ No</span>
                  </t>
                </td>
              </tr>

            </table>
          </t>

          <!-- âœ¨ Footer Note -->
          <div style="text-align: center; font-size: 13px; margin-top: 20px; color: #636e72; font-style: italic;">
            ðŸ“‹ Report generated by <span style="color: #6c5ce7; font-weight: bold;">Grocery Management System</span> â€” Thank you!
          </div>

        </div>
      </t>
    </t>
  </template>
</odoo>




